
<%= form_tag sessions_path,{:class => "upper-gap"}  do %>
  <div class="col-lg-4 col-lg-offset-4">
    <div class="well">
      <div class="row">
        <center>
          <div class="col-lg-12">
            <a href="https://www.realtybucket.com/">
            <%= image_tag("REALTY BUCKET FAVICON.png", alt: "", class: "icon_size") %>
            </a>
          </div>
        </center>
      </div>
      <br><br>
      <div class="row">
        <div class="col-lg-3">
          <b><h5>Email:</h5></b>
        </div>
        <div class="col-lg-9">
          <%= text_field_tag :email, params[:email], :class => "form-control", :placeholder => "Email", :id => "inputEmail" %>
        </div>
      </div>
      <br>  
      <div class="row">
        <div class="col-lg-3">
          <b><h5>Password:</h5></b>
        </div>
        <div class="col-lg-9">
          <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password", :id => "inputPassword"   %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-1">
          <%= check_box_tag :remember_me, 1, params[:remember_me], :class =>" "  %>
        </div>
        <div class="col-lg-4">
          <%= label_tag :remember_me, nil, class: ""  %>
        </div>
        <div class="col-lg-5">
          <%= link_to "forgotten password?", new_password_reset_path, :style => "text-decoration: none; font-size: 13px!important;" %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-2 col-lg-offset-4">
          <%= hidden_field_tag :original_url, @original_url %>
          <%= submit_tag 'Log in', :class => 'btn btn-primary', :style =>  'border-radius:12px!important; color: #fff; cursor: pointer!important; font-size: 15px!important;'  %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<style type="text/css">
  body{
    background: url(..assets/bigimg.png)!important;
  }
  .well{
    padding: 30px!important;
    width: 100%!important;
    border-radius: 20px!important;
    box-shadow: 0px 0px 20px 2px #bfbfbf!important;
  }

  .form-control{
    border-radius: 20px!important;
  }
  .btn_style{
    border-radius: 20px!important;
    width: 315px!important;
    color: #fff;
    cursor: pointer!important;
    font-size: 15px!important;
    background-image: linear-gradient(40deg,#0083ff 0,#004eff 100%);
  }
  .btn_style:hover{
    background-image: linear-gradient(40deg,#004eff 0%,#0083ff 100%);
  }
/*
