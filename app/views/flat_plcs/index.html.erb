<h1>Listing flat_plcs</h1>

<table>
  <thead>
    <tr>
      <th>Flat</th>
      <th>Plc charge</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flat_plcs.each do |flat_plc| %>
      <tr>
        <td><%= flat_plc.flat_id %></td>
        <td><%= flat_plc.plc_charge_id %></td>
        <td><%= link_to 'Show', flat_plc %></td>
        <td><%= link_to 'Edit', edit_flat_plc_path(flat_plc) %></td>
        <td><%= link_to 'Destroy', flat_plc, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

