<%@header = 'Adhoc Charge Edit'%>
<%= form_tag 'adhoc_charge_update', :html => {:class => 'form-horizontal'} do %>
  <%= hidden_field_tag :adhoc_charge_entry_id, @adhoc_charge_entry.id%>
  <div class="col-lg-5 col-lg-offset-3">
    <div class="well bs-component">
      <center><legend>&nbspAdhoc Charge</legend></center>
      <div class="row">
        <div class="col-lg-3">
          <%= label_tag :'Customer with flats' %>
        </div>
        <div class="col-lg-9">
          <%= select_tag 'adhoc_charge_entry[booking_id]', options_for_select(@customer_with_flats, selected: @adhoc_charge_entry.booking_id), :class => 'form-control chosen', :prompt => 'Select Customer' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-3">
          <%= label_tag :'Adhoc Charge' %>
        </div>
        <div class="col-lg-9">
          <%= select_tag 'adhoc_charge_entry[adhoc_charge_id]', options_for_select(@adhoc_charges, selected: @adhoc_charge_entry.adhoc_charge_id), :class => 'form-control', :prompt => 'Select Adhoc Charge' %>
        </div>    
      </div>
      <br> 
     <div class="row">
        <div class="col-lg-2">
          <%= label_tag :'Date' %>
        </div>
        <div class="col-lg-4">
          <%= date_field_tag 'adhoc_charge_entry[date]', @adhoc_charge_entry.date.to_date, :class => 'form-control'%>
        </div> 
        <div class="col-lg-2">
          <%= label_tag :'Amount' %>
        </div>      
        <div class="col-lg-4">
          <%= number_field_tag 'adhoc_charge_entry[amount]', @adhoc_charge_entry.amount, :class => 'form-control'%>
        </div>
      </div>
<br>
      <div class="row">
      <div class="col-lg-2">
          <%= label_tag :'remarks' %>
      </div>
      <div class="col-lg-10">
        <%= text_area_tag 'adhoc_charge_entry[remarks]', @adhoc_charge_entry.try(:remarks), :class => 'form-control'%>
      </div>
     </div>
 <br>    
      <div class="form-group row">
        <div class="col-lg-8 col-lg-offset-4">
          <br>
          <%= submit_tag 'Create Adhoc Charge',:class => 'btn btn-primary btn_width' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<style>
  .well{
    width: 700px !important;
    height: auto !important;
  }
  .btn_width{
    width: 50% !important;
  }
</style>
<script type="text/javascript">
  $(".chosen").chosen();
</script>
