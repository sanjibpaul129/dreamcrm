<%@header = 'Demand Money Receipt Edit'%>
<%= form_tag 'demand_money_receipt_update', :html => {:class => 'form-horizontal'} do %>
  <%= hidden_field_tag :old_money_receipt_id, @money_receipt.id %>

  <div class="col-lg-5 col-lg-offset-3">
    <div class="well bs-component">
      <legend>&nbspUpdate Money Receipt</legend>
      <div class="row">
        <div class="col-lg-3">
          <%= label_tag :'Customer with flats' %>
        </div>
        <div class="col-lg-9">
          <%= select_tag 'demand_money_receipt[booking_id]', options_for_select(@customer_with_flats, selected: @money_receipt.booking_id), :class => 'form-control', :prompt => 'Select Customer' %>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-2">
          <%= label_tag :'Payment Date' %>
        </div>
        <div class="col-lg-4">
          <%= date_field_tag 'demand_money_receipt[date]', @money_receipt.date.to_date, :class => 'form-control'%>
        </div> 
        <div class="col-lg-2">
          <%= label_tag :'Amount' %>
        </div>      
        <div class="col-lg-4">
          <%= number_field_tag 'demand_money_receipt[amount]', @money_receipt.amount, required: true, :class => 'form-control'%>
        </div>
      </div>
<br>
      <div class="row">
        <div class="col-lg-2">
          <%= label_tag :'Cheque No.' %>
        </div>
        <div class="col-lg-4">
          <%= text_field_tag 'demand_money_receipt[cheque_number]', @money_receipt.cheque_number, :class => 'form-control'%>
        </div>    
        <div class="col-lg-2">
          <%= label_tag :'Bank Name' %>
        </div>
        <div class="col-lg-4">
           <%= select_tag 'demand_money_receipt[bank_name]', options_for_select(@bank_names, selected: @money_receipt.bank_name), :class => 'form-control', :prompt => 'Select Bank' %>
        </div>
      </div>
    <br> 
    <div class="row">
      <div class="col-lg-2">
        <%= label_tag :'Instrument Date:' %>
      </div>
      <div class="col-lg-4">
        <%= date_field_tag 'demand_money_receipt[instrument_date]', @money_receipt.instrument_date.try{|x| x.to_date}, :class => 'form-control'%>
      </div>
      <div class="col-lg-2">
        <%= label_tag :'Payment Mode:' %>
      </div>
      <div class="col-lg-4">
        <%= select_tag 'demand_money_receipt[payment_mode]', options_for_select(@payment_modes, selected: @money_receipt.payment_mode), :class => 'form-control', :prompt => 'Select PaymentMode' %>
      </div>
    </div><br>
    <div class="row">
      <div class="col-lg-2">
        <%= label_tag :'Taxable Value:' %>
      </div>
      <div class="col-lg-4">
        <%= number_field_tag 'demand_money_receipt[taxable_value]', @money_receipt.try(:taxable_value), :class => 'form-control'%>
      </div>
      <div class="col-lg-2">
        <%= label_tag :'Receipt No.:' %>
      </div>
      <div class="col-lg-4">
        <%= number_field_tag 'demand_money_receipt[serial]', @money_receipt.try(:serial), :class => 'form-control'%>
      </div>
    </div><br>
     <div class="row">
      <div class="col-lg-2">
          <%= label_tag :'remarks' %>
      </div>
      <div class="col-lg-10">
        <%= text_area_tag 'demand_money_receipt[remarks]', @money_receipt.try(:remarks), :class => 'form-control'%>
      </div>
     </div>
 <br>    
      <div class="form-group row">
        <div class="col-lg-8 col-lg-offset-4">
          <br>
          <%= submit_tag 'Update Money Receipt',:class => 'btn btn-primary btn_width' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<style>
  .well{
    width: 700px !important;
    height: auto !important;
  }
  .btn_width{
    width: 50% !important;
  }
</style>