          <%else%>
            <font color="#000"><%= @cost_sheet.flat.carpet_area.round%></font>
          <%end%>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2">
          Booking Date:
        </div>
        <div class="col-lg-3">
          <%= date_field_tag 'booking[date]', '', :class => "form-control"%>
