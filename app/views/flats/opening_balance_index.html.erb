<%@header = 'Opening Balances'%>
<div class="row">
  <div class="col-lg-12">
    <center><h1>Flat's Opening Balances</h1></center>
    <div class="row">
      <%= form_tag 'opening_balance_index' do %>    
        <div class="col-lg-1">
          <h5>Project:</h5>
        </div>
        <div class="col-lg-4">
          <%= select(:business_unit, :business_unit_id, options_for_select(@business_units, selected: @business_unit_id),{}, {:class => 'form-control'}) %>
        </div>
        <div class="col-lg-2">
          <%= submit_tag 'View Details',:class => 'btn btn-primary btn-block' %>
        </div>
      <%end%>
    </div>
  </div>
</div>
<br>
<table id="customers">
  <thead>
    <tr>
      <th>Project</th>
      <th>Block</th>
      <th>Flat</th>
      <th>Opening Balance</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @flats.each do |flat| %>
      <tr>
        <td><%= flat.block.business_unit.name%></td>
        <td><%= flat.block.name%></td>
        <td><%= flat.full_name%></td>
        <td><%= flat.try(:opening_balance)%></td>
        <td><%= link_to 'Edit', flats_opening_balance_edit_path(flat),:class => 'edit_btn ', :style => "text-decoration: none"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
