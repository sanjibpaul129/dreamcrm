<%= form_tag 'flat_remarks', :html => {:class => 'form-horizontal'} do %>
  
   <div class="col-lg-5 col-lg-offset-3">
	    <div class="well bs-component">
	      <legend>&nbspRemarks against Customer</legend>
	      <div class="row">
			<div class="col-lg-2">
	          <%= label_tag :'Project' %>
	      	</div>
	      	<div class="col-lg-4">
	          <b><font color="black"><%= @flat.block.business_unit.name%></font></b>
	     	</div>
	     	<div class="col-lg-2">
	          <%= label_tag :'Customer' %>
	        </div>
	      	<div class="col-lg-4">
	           <b><font color="black"><%= @flat.lead.try(:name)%></font></b>
	     	</div>
	      </div>
	      <br>
	      <div class="row">
	     	<div class="col-lg-2">
	     		<%= label_tag :'Block' %>
	     	</div>
	      	<div class="col-lg-2">
	        	<b><font color="black"><%= @flat.block.name%></font></b>
	     	</div>
	     	<div class="col-lg-1">
	     		<%= label_tag :'Flat' %>
	     	</div>
	      	<div class="col-lg-2">
	        	<b><font color="black"><%= @flat.name%></font></b>
	     	</div>
	     	<div class="col-lg-3">
	     		<%= label_tag :'Bill Generation Type' %>
	     	</div>
	      	<div class="col-lg-2">
	        	<%if @flat.individual_bill_generation == true%>
	        		<b><font color="black">Individual</font></b>
	        	<%else%>
	        		<b><font color="black">Bulk</font></b>
	        	<%end%>
	     	</div>	
	      </div>   
	      <br>
	      <div class="row">
	      	<div class="col-lg-2">
	      		<%= label_tag :'Remarks' %>
	      	</div>
	      	<div class="col-lg-10">
	     		<%= text_area_tag 'remarks', '', :class => 'form-control'%>
	      	</div>
	      </div>
	      <br>
	      <div class="row">
	      	<div class="col-lg-2 col-lg-offset-4">
	      		<%= submit_tag 'Generate Remarks',:class => 'btn btn-primary btn_width' %>
	      	</div>
	      </div>
	    </div>
    </div>
    <%= hidden_field_tag :flat_id, @flat.id %>
<%end%>