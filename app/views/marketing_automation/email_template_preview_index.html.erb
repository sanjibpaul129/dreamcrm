<div class="col-lg-10 col-lg-offset-1">
    <div class="well bs-component">
    	<center><b><u><%= @email_template.title%></u></b></center>
    	<%@all_attachments=''%>
    	<% @email_template.email_attachments.each do |email_attachment|%>
    		<%
    			@all_attachments+=email_attachment.data_file_name.to_s+','
    		%>
    	<%end%>
    	<%= @all_attachments%><br>
    	<% if @email_template.file_name == nil && @email_template.file_url == nil%>
    	<%else%>
    		<b>File Name:</b> <%= @email_template.try(:file_name)%>
    	<%end%>
		<%= @email_template.body.html_safe%>
	</div>
	<%= form_tag 'testing_email_template_send', :html => {:class => 'form-horizontal'} do %>
	<div class="row">
		<div class="col-lg-3">
			<h5>Testing Email:</h5>
		</div>
		<div class="col-lg-9">
			<%= text_field_tag 'email_id', '',:class => 'form-control', :placeholder => 'example@gmail.com'%>
		</div>
	</div><br>
	<%= hidden_field_tag :email_template_id, @email_template.id%>
	
	<%= link_to 'Back', marketing_automation_email_template_index_path, :class => 'btn btn-primary col-lg-offset-5' %>
	<%= submit_tag 'Send', :class => 'btn btn-primary'%>
	<%end%>
</div>
<style>
body{
	color: #000;
}
@media (min-width: 1200px){
.col-lg-offset-3 {
    margin-left: 31%!important;
}
.well{
	background-color: #fff!important;
}

</style>