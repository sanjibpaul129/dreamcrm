<%= form_tag 'email_image_upload', :multipart => true, :html => {:class => 'form-horizontal'} do %>
<div class="row">
  <div class="background_well_position">
	<div class="col-lg-5 col-lg-offset-4">
	  <div class="well bs-component">
    	<center><legend>Email Attachment Upload</legend></center>
          <div class="row">
          	<div class="form-group">
          		<div class="col-lg-4">
          		  <%= label_tag :'Upload Email Image:' %>
          		</div>
          		<div class="col-lg-7">
          			<font color="#ffff00"><%= file_field_tag "pics[]",  type: :file, multiple: true, class: 'filestyle' %></font>
          		</div>
          	</div>
          </div><br>
          <div class="row">
          	<div class="col-lg-offset-4 col-lg-3">
          		<%= submit_tag 'Upload',:class => 'btn btn-primary btn-block' %>
          	</div>
          </div>
          <br>
          <%= hidden_field_tag :email_template_id, @email_template_id %>
       </div>
    </div>
  </div>
</div>
<br>
<%end%>
