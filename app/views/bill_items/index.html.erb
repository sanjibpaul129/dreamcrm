<h1>Listing bill_items</h1>

<table>
  <thead>
    <tr>
      <th>Marketing instance</th>
      <th>From</th>
      <th>To</th>
      <th>Quantity</th>
      <th>Status</th>
      <th>Remarks</th>
      <th>Bill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_items.each do |bill_item| %>
      <tr>
        <td><%= bill_item.marketing_instance_id %></td>
        <td><%= bill_item.from %></td>
        <td><%= bill_item.to %></td>
        <td><%= bill_item.quantity %></td>
        <td><%= bill_item.status %></td>
        <td><%= bill_item.remarks %></td>
        <td><%= bill_item.bill_id %></td>
        <td><%= link_to 'Show', bill_item %></td>
        <td><%= link_to 'Edit', edit_bill_item_path(bill_item) %></td>
        <td><%= link_to 'Destroy', bill_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

