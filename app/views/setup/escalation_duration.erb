<div class="col-lg-4 col-lg-offset-4">
  <div class="well bs-component">
<!--   <legend>New channel</legend> -->
  <%= form_tag 'update_escalation_duration' do %>
    <div class="form-group row">
      <div class="col-lg-3">
        <%= label_tag 'First Level Escalation in minutes' %>
      </div>
      <div class="col-lg-9">
        <%= number_field_tag :first_level_escalation, 120, :class => 'form-control'%>
      </div>
    </div><br>
    <div class="form-group row">
      <div class="col-lg-3">
        <%= label_tag 'Second Level Escalation in minutes' %>
      </div>
      <div class="col-lg-9">
        <%= number_field_tag :second_level_escalation, 180, :class => 'form-control'%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-4 col-lg-offset-4">
        <%= submit_tag 'Update', :class => 'btn btn-primary'%>
      </div>
    </div>
  <% end %>
  </div>
</div>