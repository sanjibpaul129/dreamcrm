<%= form_tag 'broker_logo_upload', :html => {:class => 'form-horizontal' , multipart: true} do %>
	<%= hidden_field_tag "broker_id", @broker.id%>
	<div class="row">
		<div class="col-lg-4 col-lg-offset-4 well">
			<center><h1><u>Upload Logo</u></h1></center><br>
			<div class="row">
				<div class="col-lg-12">
					<div class="row">
						<div class="col-lg-3">
							Upload Pic:
						</div>
						<div class="col-lg-9">
					 		<%= file_field "broker", "logo", class: 'filestyle' %>
					 	</div>
					 </div>
				</div>
			</div><br>
			<div class="row">
				<center>
					<%= submit_tag "Upload", :class => 'btn btn-primary'%>
				</center>
			</div>
		</div>
	</div>
<%end%>