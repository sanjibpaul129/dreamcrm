<%= form_tag 'broker_lead_intimation', :html => {:class => 'form-horizontal'} do %>
  <%= hidden_field_tag "broker_contact_id", params[:broker_contact_id]%>
  <div class="col-lg-5 col-lg-offset-3">
    <div class="well bs-component">
      <div class="col-xs-6 header-logo col-xs-offset-3">
        <img alt="" class="img-responsive form_logo" src="/assets/sv_form_logo.png">
      </div>
      <br>
      <br>
      <center class="col-xs-12" ><legend style="font-size: 17px;"><u>Broker Lead Protection Form</u></legend></center>
      <br>
        <div class="row">
          <div class="col-lg-3">
            Projects:
          </div>
          <div class="col-lg-9">
            <%= select_tag "business_unit_id", options_for_select(@business_units), :class => 'form-control', :prompt => 'Please Select' %>
          </div>
        </div><br>

        <div class="row">
          <div class="col-lg-3">
            Name:
          </div>
          <div class="col-lg-9">
            <%= text_field_tag "name", "", :class => 'form-control', required: true %>
          </div>
        </div><br>

        <div class="row">
          <div class="col-lg-3">
            Email:
          </div>
          <div class="col-lg-9">
            <%= text_field_tag "email", "", :class => 'form-control' %>
          </div>
        </div><br>

        <div class="row">
          <div class="col-lg-3">
            Mobile:
          </div>
          <div class="col-lg-9">
            <%= text_field_tag "mobile", "", :class => 'form-control', maxlength: 8, required: true %>
          </div>
        </div><br>
       <center>
          <div class="row">
            <div class="col-lg-3 col-lg-offset-5">
              <%= submit_tag 'Submit',:class => 'btn btn-primary' %>
            </div>
          </div>
        </center>
    </div>
  </div>
<% end %>
