<%= form_tag 'broker_contact_update', :html => {:class => 'form-horizontal'} do %>
  <%= hidden_field_tag "broker_contact_id", @broker_contact.id %>
  <div class="col-lg-5 col-lg-offset-3">
    <div class="well bs-component">
      <legend>&nbspEdit Broker Contact</legend>
      <div class="row">
        <div class="col-lg-2">
          Brokers:
        </div>
        <div class="col-lg-10">
          <%= select_tag "broker_id", options_for_select(@brokers, selected: @broker_contact.broker_id), :class => 'form-control chosen' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2">
          Name:
        </div>
        <div class="col-lg-10">
          <%= text_field_tag "name", @broker_contact.name, :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2">
          Email:
        </div>
        <div class="col-lg-10">
          <%= text_field_tag "email", @broker_contact.try(:email), :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-6">
          Mobile:
          <%= text_field_tag "mobile_one", @broker_contact.try(:mobile_one), :class => 'form-control' %>
        </div>
        <div class="col-lg-6">
          Other Number:
          <%= text_field_tag "mobile_two", @broker_contact.try(:mobile_two), :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-12">
          Saved In Phone:
          <% if @broker_contact.saved_in_phone == true%>
            <%= check_box_tag "saved_in_phone", true, nil, :checked => true %>
          <%else%>
            <%= check_box_tag "saved_in_phone", true, nil %>
          <%end%>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-12">
          Reference:
          <%= text_field_tag "reference", @broker_contact.try(:reference), :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-12">
          Person Responsible:
          <%= select_tag "personnel_id", options_for_select(@executives, selected: @broker_contact.try(:personnel_id)), :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2 col-lg-offset-4">
          <%= submit_tag 'Update Broker Contact',:class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(".chosen").chosen();
</script>