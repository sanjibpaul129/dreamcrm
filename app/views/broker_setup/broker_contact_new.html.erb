<%= form_tag 'broker_contact_create', :html => {:class => 'form-horizontal'} do %>  
  <div class="col-lg-5 col-lg-offset-3">
    <div class="well bs-component">
      <legend>&nbspGenerate Broker Contact</legend>
      <div class="row">
        <div class="col-lg-2">
          Brokers:
        </div>
        <div class="col-lg-10">
          <%= select_tag "broker_id", options_for_select(@brokers), :class => 'form-control chosen' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2">
          Name:
        </div>
        <div class="col-lg-10">
          <%= text_field_tag "name", "", :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2">
          Email:
        </div>
        <div class="col-lg-10">
          <%= text_field_tag "email", "", :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-6">
          Mobile:
          <%= text_field_tag "mobile_one", "", :class => 'form-control' %>
        </div>
        <div class="col-lg-6">
          Other Number:
          <%= text_field_tag "mobile_two", "", :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-12">
          Saved In Phone:
          <%= check_box_tag "saved_in_phone", true, nil %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-12">
          Reference:
          <%= text_field_tag "reference", "", :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-12">
          Person Responsible:
          <%= select_tag "personnel_id", options_for_select(@executives), :class => 'form-control' %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-lg-2 col-lg-offset-4">
          <%= submit_tag 'Create Broker Contact',:class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(".chosen").chosen();
</script>