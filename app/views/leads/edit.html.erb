    } else {
        return false
    }
}

$('#lead_name').change(updateFormEnabled);
$('#lead_mobile').change(updateFormEnabled);
$('#lead_other_number').change(updateFormEnabled);
$('#lead_email').change(updateFormEnabled);
</script>

