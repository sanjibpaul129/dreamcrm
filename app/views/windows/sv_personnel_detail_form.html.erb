<% if params[:format] == nil %>
  <%= form_tag 'sv_personnel_details_submit', :html => {:class => 'form-horizontal'}    do %>
    <% if @broker_lead_intimation == nil%>
    <%else%>
      <%= hidden_field_tag :broker_lead_intimation, params[:broker_lead_intimation] %>
    <%end%>
    <% if @source_category == ""%>
    <%else%>
      <%= hidden_field_tag :source_category_id, @source_category.id %>
    <%end%>
    <div class="col-xs-12">
      <% if @source_category == ""%>
      <%else%>
        <div class="row">
          <div class="col-xs-2">
            Broker:
          </div>
          <div class="col-xs-10">
            <%= @source_category.description%>
          </div>
        </div><br>
      <%end%>
      <div class="well bs-component">
        <div class="row">
          <div class="col-xs-4">
              <% if current_personnel.business_unit.name == "Dream One"%>
                <%= image_tag("Dream One - Rajarhat_Logo.png", alt: "" , class: "img-responsive form_logo") %>
              <%elsif current_personnel.business_unit.name == "Dream Palazzo"%>
                <%= image_tag("dream palazzo.jpeg", alt: "" , class: "img-responsive form_logo") %>
              <%elsif current_personnel.business_unit.name == "Dream Gurukul"%>
                <%= image_tag("deam_gurukul_logo.png", alt: "" , class: "img-responsive form_logo") %>
              <%end%>
          </div>
          <div class="col-xs-7 form_heading_margin">
            <p class ="form_heading">SITE VISIT FORM</p>
          </div>
        </div>
        <div class="division"></div><br>
        <center style="margin-top: 50px;">
          <p class="form_sub_heading">Personal Details</p>
          <!-- <font style="color: dimgray; letter-spacing: 2px; font-style: oblique; font-weight: 700;">Personal Details</font></center><br> -->
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1" style="margin-top: 10px;">
            <font style="color: dimgray; letter-spacing: 1px; font-style: oblique; font-weight: 600;">Name:</font>
          </div>
          <div class="col-xs-8">
            <% if @broker_lead_intimation == nil%>
              <%= text_field_tag 'lead[name]', '', :class => "form-control", :required => true %>
            <%else%>
              <%= text_field_tag 'lead[name]', @broker_lead_intimation.name, :class => "form-control", :required => true %>
            <%end%>
          </div>
        </div><br>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1" style="margin-top: 10px;">
            <font style="color: dimgray; letter-spacing: 1px; font-style: oblique; font-weight: 600;">Email:</font>
          </div>
          <div class="col-xs-8">
            <% if @broker_lead_intimation == nil%>
              <%= text_field_tag 'lead[email]', '', :class => "form-control", :id => "email_input" %>
            <%else%>
              <%= text_field_tag 'lead[email]', @broker_lead_intimation.try(:email), :class => "form-control", :id => "email_input" %>
            <%end%>
          </div>
        </div><br>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1" style="margin-top: 10px;">
            <font style="color: dimgray; letter-spacing: 1px; font-style: oblique; font-weight: 600;">Mobile:</font>
          </div>
          <div class="col-xs-8">
            <% if @broker_lead_intimation == nil%>
              <%= text_field_tag 'lead[mobile]', '', :class => "form-control", :id => "mobile_input", :required => true%>
            <%else%>
              <%= text_field_tag 'lead[mobile]', @broker_lead_intimation.mobile, :class => "form-control", :id => "mobile_input", :required => true%>
            <%end%>
          </div>
        </div><br>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1" style="margin-top: 10px;">
            <font style="color: dimgray; letter-spacing: 1px; font-style: oblique; font-weight: 600;">Age:</font>
          </div>
          <div class="col-xs-2 radio_button" style="margin-top: 11px;font-weight: 500; letter-spacing: 1px; color: #5c5858;">
            Below 30 <%= radio_button_tag 'dob', 'below 30', required: true %>
          </div>
          <div class="col-xs-2 radio_button" style="margin-top: 11px;font-weight: 500; letter-spacing: 1px; color: #5c5858;">
            30-40 <%= radio_button_tag 'dob', '30-40', required: true %>
          </div>
          <div class="col-xs-2 radio_button" style="margin-top: 11px;font-weight: 500; letter-spacing: 1px; color: #5c5858;">
            41-50 <%= radio_button_tag 'dob', '41-50', required: true %>
          </div>
          <div class="col-xs-2 radio_button second_line" style="margin-top: 11px;font-weight: 500; letter-spacing: 1px; color: #5c5858;">
            51-60 <%= radio_button_tag 'dob', '51-60', required: true %>
          </div>
          <div class="col-xs-2 radio_button" style="margin-top: 11px;font-weight: 500; letter-spacing: 1px; color: #5c5858;">
            60+ <%= radio_button_tag 'dob', '60+', required: true %>
          </div>
        </div><br>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1" style="margin-top: 25px;">
            <font style="color: dimgray; letter-spacing: 1px; font-style: oblique; font-weight: 600;">Address:</font>
          </div>
          <div class="col-xs-8">
            <%= text_area_tag 'lead[address]', '', :class => "form-control"%>
          </div>
        </div><br>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1" style="margin-top: 10px;">
            <font style="color: dimgray; letter-spacing: 1px; font-style: oblique; font-weight: 600;">Pincode:</font>
          </div>
          <div class="col-xs-8">
            <%= number_field_tag 'lead[pincode]', '', :class => "form-control", :required => true, maxlength: 7, oninput: "this.value = this.value.slice(0, 7)" %>
          </div>
        </div><br>
        <div class="row">
          <center>
            <%= submit_tag "Next", :class => 'btn', :style => 'background: #27303f; color: #fff; border-left: 11px solid #c8222c;' %>
          </center>
        </div>
        <div class="row">
          <div class="col-xs-offset-6 col-xs-6 footer_logo" style="margin-top: 30%;">
            <%= image_tag("sv_form_logo.png", alt: "" , class: "img-responsive form_logo", style: "margin-left: 32%;") %>
          </div>
        </div>
      </div>
    </div>
  <%end%>
<%else%>
  <%= form_tag 'sv_personnel_details_submit', :html => {:class => 'form-horizontal'} do %>
    <%= hidden_field_tag "existing_lead", @lead.id%>
    <div class="col-xs-12">
