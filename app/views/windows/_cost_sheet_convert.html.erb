  <body>
      <% @lead=Lead.find(lead_id) %>
      <% @flat=Flat.find(flat_id) %>
    <table style="width: 100vh!important; height: 100vh!important;"> 
      <tbody>
        <tr>
          <td colspan="9" style="text-align: center!important;"><%= image_tag("https://imageclassify.s3.amazonaws.com/Southern+Vista.png", alt: "",class: "header_logo") %></td>
        </tr>
        <tr style="background-color: grey!important;">
           <th colspan="5">Description</th>
           <th colspan="4">Info</th>
        </tr>
        <tr>
          <td colspan="5">Row Bungalow No</td>
          <td colspan="4"><%= @flat.floor %></td>
        </tr>
        <tr>
          <td colspan="5">Type</td>
          <td colspan="4"><%= @flat.name %></td>
        </tr>
        <tr>
          <td colspan="5">Carpet Area</td>
          <td colspan="4"><%= @flat.carpet_area %> sft</td>
        </tr>
        <tr>
          <td colspan="5">Built Up Area</td>
          <td colspan="4"><%= @flat.flat_bua %> sft</td>
        </tr>
        <tr>
          <td colspan="5">Land Area</td>
          <td colspan="4"><%= @flat.land_area %> Cottah</td>
        </tr>
        <tr>
          <td colspan="5">BHK</td>
          <td colspan="4"><%= @flat.BHK %></td>
        </tr>
        <tr>
          <td colspan="5">Bungalow Price</td>
          <td colspan="4" align="right"><%= (sprintf('%.2f', @flat.price+mark_up)) %></td>
        </tr>
        <tr>
          <td colspan="5">GST(5%)</td>
          <td colspan="4" align="right"><%= (sprintf('%.2f', (@flat.price+mark_up)*0.05)) %></td>
        </tr>  
        <% total_extra_charges=0 
          extra_development_charges=ExtraDevelopmentCharge.where(business_unit_id: BusinessUnit.find_by_name('Southern Vista').id)
           extra_development_charges.each do |extra_development_charge|
            if extra_development_charge.rate != nil
              total_extra_charges+=(@flat.flat_bua*extra_development_charge.rate)
            elsif extra_development_charge.amount != nil
              total_extra_charges+=extra_development_charge.amount
            end
           end
        %>   
        <tr>
          <td colspan="5">Extra Charges</td>
          <td colspan="4" align="right"><%= (sprintf('%.2f', total_extra_charges)) %></td>
        </tr>
        <tr>
          <td colspan="5">GST(18%)</td>
          <td colspan="4" align="right"><%= (sprintf('%.2f', total_extra_charges*0.18)) %></td>
        </tr>
        <% posession_charges=PosessionCharge.where(business_unit_id: BusinessUnit.find_by_name('Southern Vista').id)
         maintenance_amount=@flat.flat_bua*posession_charges[0].rate*12 %>
        <tr>
          <td colspan="5">Maintenance+GST(18%)</td>
          <td colspan="4" align="right"><%= (sprintf('%.2f', (maintenance_amount+(maintenance_amount*0.18)))) %></td>
        </tr>      
        <tr>
          <td colspan="5"><b>Total Consideration(Inc all)+1CP</b></td>
          <td colspan="4" align="right"><b><%=(sprintf('%.2f', ((@flat.price+mark_up).round(2)+(((@flat.price+mark_up)*0.05).round(2))+(total_extra_charges.round(2))+((total_extra_charges*0.18).round(2))+((maintenance_amount+(maintenance_amount*0.18)).round(2))))) %></b></td>
        </tr>
      </tbody>
    </table>

  </body>
