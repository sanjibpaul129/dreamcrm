
<table class="table table-striped table-hover" id="call_records">
  <thead>
    <tr>
      <th></th> 
      <th>Contact Name</th>
      <th>At</th>
      <th>Number</th>
      <th>Lead Name</th>
      <th>Length</th>
      <th>By</th> 
      <th>Type</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
      <% @call_records.each do |record| %>
        <tr class="table-secondary">
          <td></td>
          <td><%= record.contact_name %></td>
          <td><%= record.occurred_at.strftime("%d/%m/%y ") %> -- <%= record.occurred_at.strftime("%H:%M:%S") %></td>
          <td><%= record.number %></td>
          <td><%= record.lead.try(:name) %></td>
          <td><%= record.call_length %></td>        
          <td><%= record.caller %></td>
          <td><%= record.status %></td>        
          <td></td>
        </tr>
      <% end %>
          <tfoot>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td><h4><span id ='total_value'></span></h4></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    </tfoot>
  </tbody>
</table>
