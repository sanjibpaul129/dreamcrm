<%@header = 'Posession Charges'%>
<h1>Listing Posession Charges</h1>

<table id="customers">
  <thead>
    <tr>
      <th>Block</th>
      <th>Extra charge</th>
      <th>Amount</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posession_charges.each do |posession_charge| %>
      <tr>
        <td><%= posession_charge.block_id %></td>
        <td><%= posession_charge.extra_charge_id %></td>
        <td><%= posession_charge.amount %></td>
        <td><%= posession_charge.rate %></td>
        <td><%= posession_charge.gst %></td>
        <td><%= link_to 'Show', posession_charge, :class => "link_btn" %></td>
        <td><%= link_to 'Edit', edit_posession_charge_path(posession_charge), :class => "edit_btn", :style => "text-decoration:none;" %></td>
        <td><%= link_to 'Destroy', posession_charge, method: :delete, :class => "dlt_btn", :style => "text-decoration:none;",data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Posession charge', new_posession_charge_path, :class => "btn btn-primary" %>
