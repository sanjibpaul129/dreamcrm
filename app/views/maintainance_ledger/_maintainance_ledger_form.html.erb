<%= form_for @maintainance_ledger, url: {action: @maintainance_ledger_action} do |f| %>

          <% if @maintainance_ledger.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@maintainance_ledger.errors.count, "error") %> prohibited this raw material from being saved:</h2>

              <ul>
              <% @maintainance_ledger.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="col-lg-5 col-lg-offset-3">
              <div class="well bs-component">
                <legend>&nbspNEW MAINTAINANCE  LEDGER ENTRY</legend>
                  <div class="row">
                    <div class="form-group">    
                      <%= f.label :Lead, :class => 'col-lg-2 control-label' %>
                       <div class="col-lg-4">
                         <%= f.number_field :lead_id, :class => 'form-control'%>
                       </div>
                       <%= f.label :Date, :class => 'col-lg-2 control-label' %>
                       <div class="col-lg-4">
                         <%= f.date_field :date, :class => 'form-control' %>
                       </div>
                    </div>
                  </div>
    <br>
                  <div class="row">
                    <div class="form-group">    
                      <%= f.label :Amount, :class => 'col-lg-2 control-label' %>
                       <div class="col-lg-4">
                         <%= f.number_field :amount, :class => 'form-control'%>
                       </div>
                       <%= f.label :Maintanance_Bill_Id, :class => 'col-lg-2 control-label' %>
                       <div class="col-lg-4">
                         <%= f.number_field :maintainence_bill_id, :class => 'form-control', step: "any" %>
                       </div>
                     </div>
                   </div>
    <br>
                <div class="row">
                  <div class="form-group">  
                     <%= f.label :Money_receipt_id, :class => 'col-lg-2 control-label' %>
                     <div class="col-lg-4">
                       <%= f.number_field :money_receipt_id, :class => 'form-control', step: "any" %>
                     </div>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-lg-8 col-lg-offset-2">
                    <br>
                    <%= f.submit :class => 'btn btn-primary btn-block'%>
                  </div>
                </div>
              </div>
            </div>

  <%= hidden_field_tag :maintainance_ledger_id, @maintainance_ledger.id %>
<% end %>
<style>
  .well{
    width: 700px !important;
    height: auto !important;
  }
</style>